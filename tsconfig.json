{
    "compilerOptions": {
      "target": "ES2016",
      "allowJs": true,
      "module": "ES6",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["./**/*"]
  }
  