{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "strict": true
    }
}